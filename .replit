modules = ["web", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["python_anthropic_ai_integrations:1.0.0", "python_openrouter_ai_integrations:1.0.0", "resend:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["libffi", "libpq", "pkg-config", "postgresql", "python3"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--reuse-port", "--workers=2", "--timeout=120", "server:app"]
build = ["bash", "-c", "python -m pip install --force-reinstall --no-binary :all: cffi && python -m pip install -r requirements.txt"]

[userenv]

[userenv.shared]
